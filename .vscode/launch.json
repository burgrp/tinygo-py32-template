    "version": "0.2.0",
    "configurations": [

        {
            "type": "gdbtarget",
            "request": "attach",
            "name": "DEBUG",
            "program": "${workspaceFolder}/py32.elf",
            "gdb": "gdb-multiarch",
            "target": {
                "host": "localhost",
                "port": "3333",
                "type": "extended-remote"
            },
            "preLaunchTask": "build",
            "preRunCommands": [
                "monitor reset halt",
                "load",
                "monitor reset"
            ]
        }
    ]
}